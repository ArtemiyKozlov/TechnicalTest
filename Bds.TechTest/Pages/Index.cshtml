@page
@model Bds.TechTest.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
}

<header>
    <form method="post">

        <div class="search-box" role="search">
            <input type="text" class="search-input" asp-for="SearchString" />
            <input type="submit" class="search-submit" value="Search" />
        </div>
        @for (int i = 0; i < Model.Engines.Count; i++)
        {
            <input type="hidden" asp-for="Engines[i].Name" />
            @Model.Engines[i].Name
            <input asp-for="Engines[i].Selected" />
        }
    </form>
</header>


<main>
    <div class="result-container">
        <ol>
            @foreach (var item in Model.SearchResults)
            {
                <li class="result-item">
                    <h2>
                        <img class="engine-logo" src="~/images/@(item.EngineName).png" alt="engine-logo" />
                        <a href="@item.Url">@Html.Raw(item.Title)</a>
                    </h2>
                    <cite>@Html.Raw(item.UrlView)</cite>
                    <p>@Html.Raw(item.Paragraph)</p>
                </li>
            }
        </ol>
        
    </div>
</main> 

